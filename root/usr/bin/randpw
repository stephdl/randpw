#!/bin/bash
 if [[ -z $1 ]]; then
     echo "################################################################################################################################"
     echo "you must give an argument in numeric where n is anything between 1 and 100000000000 : Usage: randpw [n]  "
     echo "################################################################################################################################"
     exit
 fi

< /dev/urandom tr -dc '_A-Z-a-z-0-9!@+[](){}~<>*%^&#+=/$:;,?' | head -c${1:-$1};echo; 
